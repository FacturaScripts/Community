{% extends "Master/PortalTemplate.html.twig" %}

{% block body %}
    <div class="body-section body-padding">
        <div class="container grid-lg">
            <div class="columns">
                <div class="column">
                    <h1 class="h3 text-capitalize">{{ fsc.webPage.title }}</h1>
                </div>
            </div>
            <div class="columns">
                <div class="column col-9 col-md-12">
                    <div class="dropdown">
                        <a class="btn dropdown-toggle" tabindex="0">
                            <i class="fas fa-folder-open fa-fw" aria-hidden="true"></i>
                            {{ fsc.currentProject.name }}
                            <i class="fas fa-caret-down fa-fw" aria-hidden="true"></i>
                        </a>
                        <ul class="menu menu-big">
                            {% for project in fsc.projects %}
                                <li class="menu-item">
                                    {% if project.idproject == fsc.currentProject.idproject %}
                                        <i class="fas fa-folder-open fa-fw" aria-hidden="true"></i> <b>{{ project.name }}</b>
                                    {% else %}
                                        <a href="{{ asset(fsc.getProjectUrl(project)) }}">
                                            <i class="fas fa-folder fa-fw" aria-hidden="true"></i> {{ project.name }}
                                        </a>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <ul>
                        {% for docPage in fsc.docPages %}
                            <li>
                                <a href="{{ docPage.url('public') }}">{{ docPage.title }}</a>
                                <ul>
                                    {% for childrenPage in docPage.getChildrenPages() %}
                                        {% if loop.index < 3 %}
                                            <li>
                                                <a href="{{ childrenPage.url('public') }}">{{ childrenPage.title }}</a>
                                            </li>
                                        {% elseif loop.index == 3 %}
                                            <li>
                                                <a href="{{ docPage.url('public') }}">{{ i18n.trans('more') }}</a>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </li>
                        {% else %}
                            <li>
                                {{ i18n.trans('no-data') }}
                            </li>
                        {% endfor %}
                    </ul>
                    {% if fsc.contact or fsc.user %}
                        <a class="btn btn-success" href="{{ asset('EditWebDocPage?idproject=' ~ fsc.currentProject.idproject ~ '&langcode=' ~ fsc.webPage.langcode) }}">
                            <i class="fas fa-file fa-fw" aria-hidden="true"></i> {{ i18n.trans('add') }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}