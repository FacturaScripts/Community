<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : webdocpages.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the webdocpages table.
-->
<table>
    <column>
        <name>body</name>
        <type>text</type>
    </column>
    <column>
        <name>creationdate</name>
        <type>date</type>
    </column>
    <column>
        <name>iddoc</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('webdocpages_iddoc_seq'::regclass)</default>
    </column>
    <column>
        <name>idparent</name>
        <type>integer</type>
    </column>
    <column>
        <name>idproject</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>langcode</name>
        <type>character varying(2)</type>
    </column>
    <column>
        <name>lastidcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>lastip</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>date</type>
    </column>
    <column>
        <name>ordernum</name>
        <type>integer</type>
        <null>NO</null>
        <default>100</default>
    </column>
    <column>
        <name>permalink</name>
        <type>character varying(200)</type>
        <null>NO</null>
    </column>
    <column>
        <name>title</name>
        <type>character varying(200)</type>
    </column>
    <column>
        <name>visitcount</name>
        <type>integer</type>
    </column>
    <constraint>
        <name>webdocpages_pkey</name>
        <type>PRIMARY KEY (iddoc)</type>
    </constraint>
    <constraint>
        <name>ca_webdocpages_webdocpages</name>
        <type>FOREIGN KEY (idparent) REFERENCES webdocpages (iddoc) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_webdocpages_webprojects</name>
        <type>FOREIGN KEY (idproject) REFERENCES webprojects (idproject) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_webdocpages_permalink</name>
        <type>UNIQUE (permalink)</type>
    </constraint>
</table>