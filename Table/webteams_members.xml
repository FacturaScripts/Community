<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : webteams.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the webteams_members table.
-->
<table>
    <column>
        <name>accepted</name>
        <type>boolean</type>
    </column>
    <column>
        <name>creationdate</name>
        <type>date</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idcontacto</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idteam</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>observations</name>
        <type>text</type>
    </column>
    <constraint>
        <name>webteams_members_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>uniq_webteams_members</name>
        <type>UNIQUE (idteam,idcontacto)</type>
    </constraint>
    <constraint>
        <name>ca_webteams_members_contactos</name>
        <type>FOREIGN KEY (idcontacto) REFERENCES contactos (idcontacto) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_webteams_members_teams</name>
        <type>FOREIGN KEY (idteam) REFERENCES webteams (idteam) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>