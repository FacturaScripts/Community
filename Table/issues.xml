<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : issues.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the issues table.
-->
<table>
    <column>
        <name>body</name>
        <type>text</type>
    </column>
    <column>
        <name>closed</name>
        <type>boolean</type>
    </column>
    <column>
        <name>creationdate</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>creationroute</name>
        <type>character varying(300)</type>
    </column>
    <column>
        <name>idcontacto</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idissue</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idproject</name>
        <type>integer</type>
    </column>
    <column>
        <name>idteam</name>
        <type>integer</type>
    </column>
    <column>
        <name>idtree</name>
        <type>integer</type>
    </column>
    <column>
        <name>langcode</name>
        <type>character varying(2)</type>
    </column>
    <column>
        <name>lastcommidcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>lastip</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>priority</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <column>
        <name>visitcount</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <constraint>
        <name>issues_pkey</name>
        <type>PRIMARY KEY (idissue)</type>
    </constraint>
    <constraint>
        <name>ca_issues_webteams</name>
        <type>FOREIGN KEY (idteam) REFERENCES webteams (idteam) ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_issues_contactos</name>
        <type>FOREIGN KEY (idcontacto) REFERENCES contactos (idcontacto) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>