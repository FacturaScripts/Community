<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : translations.xml
    Author     : Raul Jimenez Jimenez
    Description:
        Structure for the translations table.
-->
<table>
    <column>
        <name>description</name>
        <type>text</type>
        <null>NO</null>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idproject</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>langcode</name>
        <type>character varying(8)</type>
        <null>NO</null>
    </column>
    <column>
        <name>lastidcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>name</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>needsrevision</name>
        <type>boolean</type>
        <null>NO</null>
    </column>
    <column>
        <name>translation</name>
        <type>text</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>translations_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_translations_languages</name>
        <type>FOREIGN KEY (langcode) REFERENCES languages (langcode) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_translations_webprojects</name>
        <type>FOREIGN KEY (idproject) REFERENCES webprojects (idproject) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_translation_language</name>
        <type>UNIQUE (langcode,name)</type>
    </constraint>
</table>
