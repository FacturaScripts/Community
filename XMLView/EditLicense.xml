<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="name" order="100">
                <widget type="text" fieldname="name" required="true" />
            </column>
            <column name="title" order="110">
                <widget type="text" fieldname="title" required="true" />
            </column>
        </group>
        <group name="description" numcolumns="12">
            <column name="description" numcolumns="12" order="100">
                <widget type="textarea" fieldname="description" required="true" />
            </column>
            <column name="open-source" order="110">
                <widget type="checkbox" fieldname="opensource" />
            </column>
        </group>
    </columns>
</view>