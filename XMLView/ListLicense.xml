<view>
    <columns>
        <column name="name" order="100">
            <widget type="text" fieldname="name" />
        </column>
        <column name="title" order="110">
            <widget type="text" fieldname="title" />
        </column>
        <column name="description" order="120">
            <widget type="textarea" fieldname="description" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="warning" fieldname="opensource">0</option>
            <option color="success" fieldname="opensource">1</option>
        </row>
    </rows>
</view>
